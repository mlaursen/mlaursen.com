{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "composite": false,
    "skipLibCheck": true,
    "target": "esnext",
    "rootDir": "src",
    "baseUrl": "src",
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/server",
    "**/__tests__"
  ]
}
